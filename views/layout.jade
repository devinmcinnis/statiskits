include ./mixins.jade

doctype html
html
  head
    title= title
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div.nav
      .nav-section.nav-section--left
        span.nav-title= headerTitle

      .nav-section.nav-section--middle
        .nav-section-inner
          a(href='/') Top 10s
          = ' '
          a(href='/sale') Cheapest Sales
          = ' '
          a(href='/sire') Cheapest Sires
          = ' '
          a(href='/clock') Clock Cats
          = ' '
          a(href='https://kittysales.herokuapp.com' target='_blank') Recent Sales

      .nav-section.nav-section--right
        if ethPrice
          span.eth-price ETH $
            = ethPrice.toFixed(2)
            = ' USD'

    .content
      block content

    if isProduction
      script(async src='https://www.googletagmanager.com/gtag/js?id=UA-110458985-1')
      script.
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-110458985-1');
