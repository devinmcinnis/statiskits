mixin kitty(kitty)
  - var kittyPrice = parseInt(kitty.current_price, 10) / 1000000000000000000

  .kitty
    a(target="_blank" href='https://www.cryptokitties.co/kitty/' + kitty.kitty.id)
      img(src=kitty.kitty.image_url)
    div= '#' + kitty.kitty.id
    div ETH
      = ' '
      span= parseFloat(kittyPrice.toFixed(4))
    div Price $#{(kittyPrice * ethPrice).toFixed(2)}
    div Gen #{kitty.kitty.generation}
      = ', '
      +cooldown(kitty.kitty.status.cooldown_index)

mixin cooldown(index)
  case index
    when 0
      span Fast(0)
    when 1
      span Swift(1)
    when 2
      span Swift(2)
    when 3
      span Snappy(3)
    when 4
      span Snappy(4)
    when 5
      span Brisk(5)
    when 6
      span Brisk(6)
    when 7
      span Plodding(7)
    when 8
      span Plodding(8)
    when 9
      span Slow(9)
    when 10
      span Slow(10)
    when 11
      span Sluggish(11)
    when 12
      span Sluggish(12)
    when 13
      span Catatonic(13)
    default
      span Unknown

mixin pageNav(page, nextPage, prevPage)
  if page && (nextPage || prevPage)
    div.page-nav
      if prevPage === 0
        a.Button(href='/#{page}') Prev Page
      else if prevPage
        a.Button(href='/#{page}/#{prevPage}') Prev Page
      else
        span

      if nextPage
        a.Button(href='/#{page}/#{nextPage}') Next Page
